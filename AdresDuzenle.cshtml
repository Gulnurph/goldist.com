                <label>İlçe*</label>
                <select id="district" type="text" asp-for="ILCE" class="form-control" name="ILCE" placeholder="" style="border:0.25px solid #959595; " >
                 
                </select>
                @Html.ValidationMessageFor(model => model.ILCE, "", new { @class = "text-danger" })
             
            </div>
          
