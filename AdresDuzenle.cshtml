                <label>Adres*</label>
                <textarea class="form-control" name="ADR1" id="ADR1" placeholder="" style="border:0.25px solid #959595" required oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Lütfen bu alanı doldurunuz.')">@Model.ADR1</textarea>
