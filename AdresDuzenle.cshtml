            </div>
            <div class="form-group  col-sm-6">

                <label>Telefon Numarası*</label>
                <input type="text" class="form-control" name="TEL1" value="@Model.TEL1" id="TEL1" placeholder="" style="border:0.25px solid #959595" required oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Lütfen bu alanı doldurunuz.')" />

            </div>
            <div class="form-group  col-sm-6">

                <label>E-Posta*</label>
                <input type="email" class="form-control" name="EMAIL" value="@Model.EMAIL" id="EMAIL" placeholder="" style="border:0.25px solid #959595" required oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Lütfen bu alanı doldurunuz.')" />

            </div>
            <div class="form-group  col-sm-6">

                <label>T.C. No/Vergi No</label>
                <input type="email" class="form-control" name="EMAIL" value="@Model.VERGINO" id="EMAIL" placeholder="" style="border:0.25px solid #959595"/>


            </div>
            <div class="form-group  col-sm-6">

                <label>Vergi Dairesi</label>
                <input type="email" class="form-control" name="EMAIL" value="@Model.VERGIDAIRESI" id="EMAIL" placeholder="" style="border:0.25px solid #959595" />


            </div>
            <div class="form-group col-sm-6">

                <label>Posta Kodu*</label>
                <input type="text" class="form-control" name="POSTAKODU" value="@Model.POSTAKODU" id="POSTAKODU" placeholder="" style="border:0.25px solid #959595" required oninput="this.setCustomValidity('')" oninvalid="this.setCustomValidity('Lütfen bu alanı doldurunuz.')" />
                

            </div>
            @Html.HiddenFor(x => x.SIRANO)
            <div class="form-group col-sm-6">
                <label></label>
                <button id="btnLogin" type="submit" class="btn mt-1" style="font-size: 15px; color: white; background-color: red; box-shadow: none !important; width: 100%; border-radius: 0; border-color: red">
                    GÜNCELLE
                </button>

                
            </div>

        </form>
    </div>
</div>

